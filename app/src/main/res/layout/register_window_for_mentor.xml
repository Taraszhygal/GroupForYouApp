<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:cardElevation="10dp">

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/nameField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ваше ім'я"
                android:inputType="text"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="20sp"

                app:met_baseColor="#000000"
                app:met_errorColor="#b00009"
                app:met_floatingLabel="normal"
                app:met_primaryColor="#333333" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/second_nameField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ваше прізвище"
                android:inputType="text"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="20sp"

                app:met_baseColor="#000000"
                app:met_errorColor="#b00009"
                app:met_floatingLabel="normal"
                app:met_primaryColor="#333333" />


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/numberField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Телефон"
                android:inputType="number"
                android:padding="1dp"
                android:text=""
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="20sp"

                app:met_baseColor="#000000"
                app:met_errorColor="#b00009"
                app:met_floatingLabel="normal"
                app:met_primaryColor="#333333" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/mailField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="20sp"

                app:met_baseColor="#000000"
                app:met_errorColor="#b00009"
                app:met_floatingLabel="normal"
                app:met_primaryColor="#333333" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/PassField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Пароль"
                android:inputType="textPassword"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="20sp"

                app:met_baseColor="#000000"
                app:met_errorColor="#b00009"
                app:met_floatingLabel="normal"
                app:met_minCharacters="8"
                app:met_primaryColor="#353535" />
            <TextView
                android:id="@+id/expTextField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/exp"
                android:textAlignment="center"
                android:textColor="#BF050505"
                android:textSize="18sp"
                android:textStyle="bold" />

            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/number_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                app:np_dividerColor="@color/colorLinerLayout"
                app:np_fadingEdgeEnabled="false"
                app:np_height="50dp"
                app:np_max="10"
                app:np_min="0"
                app:np_order="ascending"
                app:np_orientation="horizontal"
                app:np_selectedTextColor="@color/colorLinerLayout"
                app:np_selectedTextSize="@dimen/bottom_text_size"
                app:np_textColor="@color/colorLinerLayout"
                app:np_textSize="@dimen/bottom_text_size"
                app:np_width="180dp"
                app:np_wrapSelectorWheel="false" />

        </LinearLayout>
    </ScrollView>

</androidx.cardview.widget.CardView>
